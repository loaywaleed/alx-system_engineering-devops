#!/usr/bin/env bsah
# Configuring HAProxy

apt-get -y updatei
apt-get install --no-install-recommends software-properties-common
add-apt-repository ppa:vbernat/haproxy-2.4

apt-get install -y haproxy=2.4.\

echo "
frontend lbnb.tech
        bind 0:80
        default_backend lbnb.tech_backend
backend lbnb.tech_backend
        balance roundrobin
        server 294262-web-01 34.202.233.65:80
        server 294262-web-02 100.26.166.24:80
" >> /etc/haproxy/haproxy.cfg

service haproxy restart
