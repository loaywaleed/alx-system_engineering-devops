#!/usr/bin/env bash
# script that installs nginx and redirects
sudo apt-get -y update
sidp apt-get install -y nginx
sudo chown -R ubuntu /var/www
echo "hello World!" > /var/www/html/index.html
sudo sed -i "/listen 80 default_server;/a rewrite ^/redirect_me https://github.com/loaywaleed permanent;" /etc/nginx/sites-enabled/default
sudo service nginx restart
